@model List<Language>
@{
    ViewData["Title"] = "Index Language";

}

<h1>Language</h1>

<a asp-action="Create" class="btn-primary mt-4 mb-3">Add New Language</a>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th></th>
            <th>Language</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Language language in Model)
        {
            <tr>
                <td>@language.Id</td>
                <td>@language.LanguageName</td>
                <td>
                    <a asp-action="Edit" asp-controller="Language" asp-route-id="@language.Id" class="m-3 text-warning">Edit</a>
                    <a asp-action="Delete" asp-controller="Language" asp-route-id="@language.Id" class="m-3 text-warning">Delete</a>
                </td>
            </tr>

        }
    </tbody>

</table>


<div>
    <a asp-action="Index">Back to List</a>
</div>
